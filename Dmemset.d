import core.stdc.string: memset;
import S_struct;

void Cmemset(T)(T[] dst, const int v)
{
    pragma(inline, true)
    memset(dst.ptr, v, dst.length * T.sizeof);
}

import core.stdc.stdio: printf;

// IMPORTANT(stefanos): memset is supposed to return the dest
void Dmemset(T)(T[] dst, const int val)
{
    void *d = dst.ptr;
    size_t n = dst.length * T.sizeof;
    const int v = val * 0x01010101;  // Broadcast c to all 4 bytes

    // NOTE(stefanos): Hope for a jump table.
    // TODO(stefanos): Can `mixin` help?
    switch (n) {
        case 16:
            *(cast(int*)(d+12)) = v;
            goto case 12;
        case 12:
            *(cast(int*)(d+8)) = v;
            goto case 8;
        case 8:
            *(cast(int*)(d+4)) = v;
            goto case 4;
        case 4:
            *(cast(int*)d) = v;
        return;

        case 15:
            *(cast(int*)(d+11)) = v;
            goto case 11;
        case 11:
            *(cast(int*)(d+7)) = v;
            goto case 7;
        case 7:
            *(cast(int*)(d+3)) = v;
            goto case 3;
        case 3:
            *(cast(ushort*)(d+1)) = cast(ushort)v;
            goto case 1;
        case 1:
            *(cast(ubyte*)d) = cast(ubyte)v;
        return;

        case 14:
            *(cast(int*)(d+10)) = v;
            goto case 10;
        case 10:
            *(cast(int*)(d+6)) = v;
            goto case 6;
        case 6:
            *(cast(int*)(d+2)) = v;
            goto case 2;
        case 2:
            *(cast(short*)d) = cast(short)v;
        return;

        case 13:
            *(cast(int*)(d+9)) = v;
            goto case 9;
        case 9:
            *(cast(int*)(d+5)) = v;
            goto case 5;
        case 5:
            *(cast(int*)(d+1)) = v;
            *(cast(ubyte*)d) = cast(ubyte)v;
        return;

        default: assert(0);
    }
}
